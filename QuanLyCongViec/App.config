<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- Connection String cho SQL Server -->
    <!-- 
    CÁCH 1: Windows Authentication (Khuyến nghị cho development)
    Thay đổi Server name nếu cần (localhost, localhost\SQLEXPRESS, v.v.)
    -->
    <add name="QuanLyCongViecConnection" 
         connectionString="Server=.\SQLEXPRESS;Database=QuanLyCongViec;Integrated Security=True;TrustServerCertificate=True;" 
         providerName="System.Data.SqlClient" />
    
    <!-- 
    CÁCH 2: SQL Server Authentication
    Uncomment và điền thông tin nếu dùng SQL Server Authentication
    -->
    <!--
    <add name="QuanLyCongViecConnection" 
         connectionString="Server=localhost;Database=QuanLyCongViec;User Id=sa;Password=YourPassword;TrustServerCertificate=True;" 
         providerName="System.Data.SqlClient" />
    -->
    
    <!-- 
    CÁCH 3: SQL Server Express
    -->
    <!--
    <add name="QuanLyCongViecConnection" 
         connectionString="Server=TDMHORIZON\SQLEXPRESS;Database=QuanLyCongViec;Integrated Security=True;TrustServerCertificate=True;" 
         providerName="System.Data.SqlClient" />
    -->
    
    <!-- 
    CÁCH 4: LocalDB (cho development)
    -->
    <!--
    <add name="QuanLyCongViecConnection" 
         connectionString="Server=(localdb)\MSSQLLocalDB;Database=QuanLyCongViec;Integrated Security=True;TrustServerCertificate=True;" 
         providerName="System.Data.SqlClient" />
    -->
  </connectionStrings>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>

